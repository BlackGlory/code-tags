{
  "name": "@blackglory/code-tags",
  "version": "0.1.0",
  "files": [
    "lib",
    "dist"
  ],
  "main": "lib/es2015/index.js",
  "types": "lib/es2015/index.d.ts",
  "module": "dist/es2015/index.mjs",
  "browser": "dist/es2015/index.umd.js",
  "repository": "git@github.com:BlackGlory/code-tags.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --config jest.config.js",
    "coverage": "jest --coverage --config jest.config.js",
    "prepublishOnly": "yarn clean && yarn build && yarn bundle",
    "clean": "yarn clean:build && yarn clean:bundle",
    "clean:build": "rm -rf lib",
    "clean:bundle": "rm -rf dist",
    "build": "yarn build:es2015",
    "build:es2015": "tsc --project tsconfig.build.json --module commonjs --target es2015 --outDir lib/es2015 && tscpaths -p tsconfig.build.json -s ./src -o ./lib/es2015",
    "bundle": "rollup --config rollup.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/common-tags": "^1.8.0",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "rollup": "^2.13.1",
    "rollup-plugin-terser": "^6.1.0",
    "ts-jest": "^26.1.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@blackglory/types": "^0.1.3",
    "common-tags": "^1.8.0"
  }
}
